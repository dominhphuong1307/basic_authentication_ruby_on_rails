<%= form_for @question,url: admins_questions_path, html: {multipart: true} do |f| %>
<h3>Question</h3>
<div class = "field">
  <%= f.label :content, "Question" %>
  <%= f.text_field :content %>
  <%= f.check_box :isparamly %>
</div>
<div class = "fields">
    <%= f.fields_for :question_images do |image| %>
        <%= image.label :image %>
        <%= image.file_field :image, multiple: true,name: "question_images[image][]", class:"upload-image" %>
    <% end %>
</div>

<h3>Answer</h3>
    <%= f.fields_for :answers do |answer| %>``
    <%= render 'answer_fields',f: answer %>
    <% end %>
   
  <%= f.submit %>
<% end %>

<%= link_to  "Back", admins_home_path %>