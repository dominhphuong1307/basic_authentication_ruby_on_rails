<h1>Question: <%= @current + 1 %>/<%= @total %></h1>

<p id="question"><%= @question.content %></p>
<%= form_tag({:controller => "quizzes", :action => "question"}) do %>
<% @answers.each do |answer| %>
<p class="answer">
    <%= radio_button_tag(:answer, answer.id) %>
    <%= label_tag("answer_".concat(answer.id.to_s).to_sym, answer.content) %>
</p>
<% end %>
<div class="center">
	 <%= submit_tag("Continue", :class => "submit") %>
</div>
<% end %>
