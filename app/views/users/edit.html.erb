<%= form_with model: current_user, local: true do |f| %>
<div class="container">
  <h1 class="page-header">Edit Profile</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <%if current_user.avatar.blank?%>
          <img src="https://secure.gravatar.com/avatar/8a6ef5c647bf53379e03febdac627d84?s=96&d=mm&r=g" class="avatar img-circle img-thumbnail" alt="avatar">
       <%else%>
       <div class = "avatar">
          <%= image_tag(current_user.avatar.url, alt: "Avatar")%>
        </div>
      <%end%>        
      <h6>Upload a different photo...</h6>
        <%=f.file_field :avatar%>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-lg-3 control-label">User name:</label>
          <div class="col-lg-8">
               <%= f.text_field :username, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
              <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Birthday:</label>
          <div class="col-md-8">
              <%= f.text_field :birthday, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Phone:</label>
          <div class="col-md-8">
              <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Address:</label>
          <div class="col-md-8">
              <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
          <%= link_to  'Cancel', user_path(current_user) , class: "btn btn-danger"%>
          <%= f.submit 'Save change', class: "btn btn-primary" %>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
